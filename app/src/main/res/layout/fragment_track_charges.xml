<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".Fragments.Transit.TrackCharges">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/parking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BialGenieApp"
        android:text="Enter parking details:"
        android:fontFamily="@font/montserrat"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>



<Spinner
    android:id="@+id/spinner"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="140dp"
    android:layout_marginTop="60dp"
    android:layout_below="@+id/parking_title"
    />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/parking_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:theme="@style/Theme.BialGenieApp"
        android:text="Parking Type:"
        android:textColor="#3A3A3A"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat"
        android:layout_below="@+id/parking_title"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date_picker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BialGenieApp"
        android:text="Select Date:"
        android:layout_below="@+id/parking_type_text_view"
        android:layout_marginTop="70dp"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat"
        android:textColor="#3A3A3A"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/date_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pick a date"
        android:theme="@style/Theme.BialGenieApp"
       app:icon="@drawable/ic_baseline_calendar_today_24"
        android:textColor="@color/light_navyBlue"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/light_navyBlue"
        android:backgroundTint="#FCFEFF"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="40dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/time_picker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time:"
        android:theme="@style/Theme.BialGenieApp"
        android:layout_below="@+id/date_picker_text"
        android:layout_marginTop="70dp"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat"
        android:textColor="#3A3A3A"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/time_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_button"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FCFEFF"
        android:text="Pick a time"
        android:textColor="@color/light_navyBlue"
        android:theme="@style/Theme.BialGenieApp"
        app:icon="@drawable/ic_baseline_access_time_24"
        app:strokeColor="@color/light_navyBlue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:theme="@style/Theme.BialGenieApp"
        android:layout_height="wrap_content"
        android:text="submit"
        app:cornerRadius="20dp"
        android:layout_below="@id/time_button"
        android:layout_marginTop="90dp"
       android:layout_marginStart="160dp"/>





</RelativeLayout>